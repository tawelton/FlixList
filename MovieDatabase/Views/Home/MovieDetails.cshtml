@model MovieDatabase.Models.Movie
    @{ 
        ViewBag.title = Model.title;
    }

<section class="no-padding-top margin-top-sm">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-3 col-md-6">
                @*Display the movie poster*@
                <div class="poster" style="background-image: url('@Model.posterURL');" alt="@Model.title"> </div>
            </div>
        </div>
        <div class="row justify-content-center margin-top-sm">
            <div class="col-lg-5 col-md-8">
                @*Display the movie information*@
                <ul class="list-unstyled">
                    <li><h2>@Model.title</h2></li>
                    <li>Duration: @Model.duration</li>
                    <li>Release Year: -2018-</li>
                    <li>Rating: -PG-13-</li>
                </ul>
                <button class="btn btn-primary" value="Add to My Library">Add to My Library</button>
            </div>
        </div>
    </div>
</section>

